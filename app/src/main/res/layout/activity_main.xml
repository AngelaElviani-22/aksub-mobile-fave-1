<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="32dp"
    android:background="@color/cardview_light_background">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="275dp"
        android:layout_height="388dp"
        android:src="@drawable/amongus"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="-40dp" />

    <TextView
        android:id="@+id/tv_header_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hey, you!"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/tv_header_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes, login and find the imposter now!"
        android:textColor="@color/cardview_shadow_start_color"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteY="371dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_header_1"
        />

    <EditText
        android:id="@+id/tv_text_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="425dp" />
    <EditText
        android:id="@+id/tv_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        app:layout_constraintTop_toBottomOf="@id/tv_text_username"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/tv_button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@android:color/background_dark"
        android:text="Login"
        app:layout_constraintTop_toBottomOf="@id/tv_text_password"
        tools:layout_editor_absoluteX="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>